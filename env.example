# MadridistaAI Telegram Bot Configuration

# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# OpenAI API Key (for generating content)
OPENAI_API_KEY=your_openai_api_key_here

# Football Data APIs (Optional - for live data)
# Get from: https://www.football-data.org/
FOOTBALL_DATA_API_KEY=your_football_data_api_key_here

# API-Football Key (Optional - for additional data)
# Get from: https://www.api-football.com/
API_FOOTBALL_KEY=your_api_football_key_here

# Live Monitoring Configuration
LIVE_PROVIDER=sofascore
SOFA_TEAM_ID=2817
POLL_SECONDS=25

# RapidAPI Keys (Optional - for news and TV listings)
LIVESCORE_RAPIDAPI_KEY=your_livescore_rapidapi_key_here
LIVESCORE_RAPIDAPI_HOST=livescore6.p.rapidapi.com
SOFA_RAPIDAPI_KEY=your_sofa_rapidapi_key_here
SOFA_RAPIDAPI_HOST=sofascore.p.rapidapi.com

# News and TV Configuration
NEWS_CATEGORY=soccer
NEWS_LIMIT=8
USER_COUNTRY=NG

# Smart Banter Configuration
ENABLE_BANTER=true
BANTER_COOLDOWN_SEC=45
BANTER_PER_USER_COOLDOWN_SEC=120
BANTER_MAX_PER_HOUR=15
BANTER_REPLY_PROB=0.6
BANTER_KEYWORDS=real madrid,cristiano,ronaldo,cr7,vinicius,vini,bernabeu,hala madrid,bellingham,ancelotti,mbappe
BANTER_RIVALS=barcelona,barca,messi,atleti,psg,man city

# Memory and Media Configuration
ENABLE_MEMORY=true
MEMORY_WINDOW=20
ENABLE_MEDIA=true
MEDIA_REPLY_PROB=0.3

# Time and Timezone Configuration
BOT_TIMEZONE=UTC
BOT_LOCALE=en_US

# Optional: Set to true for development/testing
DRY_RUN=false
