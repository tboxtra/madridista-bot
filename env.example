# MadridistaAI Telegram Bot Configuration

# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# OpenAI API Key (for generating content)
OPENAI_API_KEY=your_openai_api_key_here

# Football Data APIs (Optional - for live data)
# Get from: https://www.football-data.org/
FOOTBALL_DATA_API_KEY=your_football_data_api_key_here

# API-Football Key (Optional - for additional data)
# Get from: https://www.api-football.com/
API_FOOTBALL_KEY=your_api_football_key_here

# Optional: Set to true for development/testing
DRY_RUN=false

# Time and Timezone Configuration
BOT_TIMEZONE=UTC
BOT_LOCALE=en_US
